<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources" type="Fakturowanie.client.resources.AppResources" />

	<g:HTMLPanel styleName="{resources.style.error_i_dodaj_html_panel}">
		<h1>DODAJ PRODUKT</h1>
		<hr />

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="NAZWA" styleName="{resources.style.label}" />
			<g:TextBox ui:field="textBoxNazwa" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="CENA" styleName="{resources.style.label}" />
			<g:TextBox ui:field="textBoxCena" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="JEDNOSTKA" styleName="{resources.style.label}" />
			<g:ValueListBox ui:field="valueListBoxJednostka" styleName="{resources.style.valueListBox}"/>
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="VAT" styleName="{resources.style.label}" />
			<g:TextBox ui:field="textBoxVAT" />
		</g:HorizontalPanel>

		<hr />

		<g:HorizontalPanel styleName="{resources.style.horizontal_panel_buttony}">
			<g:Button text="DODAJ" ui:field="buttonDodaj"
				styleName="{resources.style.buttony_wyswietl_dodaj}" />
		</g:HorizontalPanel>
		<br />

	</g:HTMLPanel>
</ui:UiBinder>