<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.html_panel {
		background-color: aqua;
		width: 100%;
		height: 1000px;
		padding: 15px;
	}
	
	.horizontal_panel {
		padding: 25px;
	}
	
	.label {
		width: 150px;
	}
	
	.horizontal_panel_buttony {
		padding: 25px;
		float: right;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.html_panel}">
		<h1 align="center">DODAJ USLUGE</h1>
		<hr />

		<g:HorizontalPanel styleName="{style.horizontal_panel}">
			<g:Label text="NAZWA" styleName="{style.label}"></g:Label>
			<g:TextBox ui:field="textBoxNazwa"></g:TextBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{style.horizontal_panel}">
			<g:Label text="CENA/H" styleName="{style.label}"></g:Label>
			<g:TextBox ui:field="textBoxCenaZaGodzine"></g:TextBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{style.horizontal_panel}">
			<g:Label text="JEDNOSTKA PODSTAWOWA VAT" styleName="{style.label}"></g:Label>
			<g:TextBox ui:field="textBoxJednostkaPodstawowaVAT"></g:TextBox>
		</g:HorizontalPanel>

		<hr />

		<g:HorizontalPanel styleName="{style.horizontal_panel_buttony}">
			<g:Button text="DODAJ" ui:field="buttonDodaj"></g:Button>
		</g:HorizontalPanel>

	</g:HTMLPanel>
</ui:UiBinder>