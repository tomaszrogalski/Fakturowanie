<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="resources" type="Fakturowanie.client.resources.AppResources" />
	
	<g:HTMLPanel styleName="{resources.style.error_i_dodaj_html_panel}">
		<h1 align="center">DODAJ USLUGE</h1>
		<hr />

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="NAZWA" styleName="{resources.style.label}"/>
			<g:TextBox ui:field="textBoxNazwa"/>
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="CENA/H" styleName="{resources.style.label}"/>
			<g:TextBox ui:field="textBoxCenaZaGodzine"/>
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="{resources.style.dodaj_horizontal_panel}">
			<g:Label text="JEDNOSTKA PODSTAWOWA VAT" styleName="{resources.style.label}"/>
			<g:TextBox ui:field="textBoxJednostkaPodstawowaVAT"/>
		</g:HorizontalPanel>
		<hr />

		<g:HorizontalPanel
			styleName="{resources.style.horizontal_panel_buttony}">
			<g:Button text="DODAJ" ui:field="buttonDodaj"/>
		</g:HorizontalPanel>
		<br/>

	</g:HTMLPanel>
</ui:UiBinder>