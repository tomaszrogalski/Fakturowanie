<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="cwiczenie2" transaction-type="JTA">
		<jta-data-source>java:/PostgresDS</jta-data-source>

		<class>Fakturowanie.server.Faktura</class>
		<class>Fakturowanie.server.Klient</class>
		<class>Fakturowanie.server.Pozycja</class>
		<class>Fakturowanie.server.Produkt</class>
		<class>Fakturowanie.server.Usluga</class>
		
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false" />
			<property name="hibernate.show_sql" value="true" />

		</properties>
	</persistence-unit>
</persistence>


